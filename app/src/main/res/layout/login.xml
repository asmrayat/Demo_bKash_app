<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"

    android:background="#ffffff"
    >

    <LinearLayout
        android:id="@+id/hadder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/hadder"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:paddingTop="40dp"
            android:paddingRight="110dp"
            android:scaleType="fitStart"
            android:src="@drawable/bkicon" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingLeft="120dp"
            android:paddingTop="40dp"
            android:scaleType="fitStart"
            android:src="@drawable/qr_code" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_below="@id/icons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Log In"
            android:textSize="21dp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingLeft="20dp"
            android:textColor="#464646"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="to your bKash account"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textColor="#464646"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/loginForm"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:text="Account Number"
            android:textColor="#777777"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="20dp"
            android:text="+88  017XXXXXXXX"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/account"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="bKash PIN"
                android:paddingTop="14dp"
                android:textSize="12dp"
                android:paddingLeft="20dp"
                android:textColor="#777777"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Forgot PIN?"
                android:textStyle="bold"
                android:paddingTop="14dp"
                android:textAlignment="viewEnd"
                android:textSize="12dp"
                android:paddingRight="30dp"
                android:textColor="#e2136e"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Enter bKash PIN"
            android:textSize="13dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textColor="#c7c7c7"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e2136e"
        android:orientation="horizontal"
        android:weightSum="2"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Next"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:padding="11dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e2136e"
            android:src="@drawable/right_arrow"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:padding="11dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

</RelativeLayout>